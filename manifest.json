{
  "manifest_version": 3,
  "name": "Tailwind Class Translator",
  "version": "1.0.0",
  "description": "Translate Tailwind CSS utility classes into readable CSS properties for easier debugging",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Tailwind Class Translator",
    "default_icon": "src/icon.png"
  },
  "icons": {
    "16": "src/icon.png",
    "32": "src/icon.png",
    "48": "src/icon.png",
    "128": "src/icon.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["src/tailwind-translator.js", "src/tailwind-mappings.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
