{
  "name": "tailwind-class-translator",
  "displayName": "Tailwind Class Translator",
  "version": "2.0.0",
  "description": "Translate Tailwind CSS utility classes into readable CSS properties for easier debugging",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "clean": "rm -rf build dist .plasmo"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.12.0",
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.268",
    "@types/node": "20.11.5",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
  }
}
